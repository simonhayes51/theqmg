# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Railway/Heroku deployments)
# DATABASE_URL=postgresql://username:password@host:port/database
# DB_SSL=false

# Option 2: Use individual database variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quiz_master_general
DB_USER=postgres
DB_PASSWORD=your_password_here

# Note: If DATABASE_URL is set, it takes priority over individual DB_* variables

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CLIENT_URL=http://localhost:5173
